---
const { author, tags } = Astro.props;
import { slugify } from "../utils/utils";
---

<div class="w-full flex justify-between absolute bottom-0 border-t dark:border-t-slate-100 border-t-slate-600 pt-6 transition-colors duration-700">
  <div class="flex flex-col uppercase tracking-wide text-xs min-h-10">
    <span class="text-xs uppercase opacity-50 tracking-wide font-bold dark:text-white text-black transition-colors duration-700">author</span>
    <span class="text-xs uppercase opacity-100 font-normal mt-2 tracking-wide dark:text-white text-black transition-colors duration-700">{author}</span>
  </div>
  <div class="flex flex-col uppercase tracking-wide text-xs min-h-10">
    <span class="text-xs uppercase opacity-50 tracking-wide font-bold dark:text-white text-black transition-colors duration-700">tags</span>
    <div class="tags">
      <ul class="flex mt-2">
        {
          tags.map((tag) => (
              <li class="text-xs tracking-wide list-none ml-2 uppercase relative z-[1] flex justify-center cursor-pointer">
                <a class="no-underline text-[inherit]" href=`/tags/${slugify(tag)}`>{tag}</a>
              </li>
            )
          )
        }
      </ul>
    </div> 
  </div>
</div>

<style>
          li {

            &:before {
              content: "";
              text-align: center;
              width: 100%;
              height: 5px;
              background: #fc6042;
              opacity: 0.5;
              position: absolute;
              bottom: 0;
              z-index: -1;
              padding: 0px 1px;
              -webkit-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
              -moz-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
              -ms-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
              -o-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
              transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
            }

            &:hover:before {
              height: 18px;
            }
          }
    
</style>