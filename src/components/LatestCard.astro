---
import { Image, Picture } from "astro:assets";
import { slugify } from "../utils/utils";

const { metaData } = Astro.props;
---

<a href=`/post/${slugify(metaData.title)}`>
  <div
    class="cursor-pointer flex md:flex-row flex-col-reverse md:h-96 w-full mb-10 md:mt-10 gap-2 md:gap-20"
  >
    <div class="flex-1 dark:text-white text-black transition-colors duration-700">
      <p class="font-bold dark:text-white text-black transition-colors duration-700">
        {new Date(metaData.date).toLocaleDateString()}
      </p>
      <h2 class="text-2xl md:text-5xl font-bold md:mt-4">
        {metaData.title}
      </h2>
      <p class="text-md md:text-xl md:mt-6 text-justify">
        {metaData.description}
      </p>
    </div>
    <div class="flex-1 md:mt-0">
      <Picture
        class="h-full float-end"
        src={metaData.imageUrl}
        decoding="async"
        loading="lazy"
        formats={["avif", "webp"]}
        height={"400"}
        width={"800"}
        alt="Header image for latest card"
      />
    </div>
  </div>
</a>
