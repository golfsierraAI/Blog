---
import { slugify } from "../utils/utils";

const { metaData } = Astro.props;
---

<a href=`/post/${slugify(metaData.title)}`>
  <div
    class="cursor-pointer flex lg:flex-row flex-col-reverse lg:h-96 w-full mb-10 lg:mt-10 gap-2 lg:gap-20"
  >
    <div class="flex-1">
      <p class="font-bold text-gray-400">
        {new Date(metaData.date).toLocaleDateString()}
      </p>
      <h2 class="text-2xl lg:text-5xl font-bold lg:mt-4">
        {metaData.title}
      </h2>
      <p class="text-md lg:text-xl lg:mt-6 text-justify">
        {metaData.description}
      </p>
    </div>
    <div class="flex-1 lg:mt-0">
      <img class="h-full float-end" src={metaData.imageUrl} />
    </div>
  </div>
</a>
