---
const { metaData } = Astro.props;
---

<>
  <h1>{metaData.title}</h1>
  <div class="flex items-center gap-3 m-0">
    <img
      src={metaData.authorImageUrl.replace(/'/g, '').replace(/"/g, '')}
      alt="Image of Author"
      class="rounded-full w-[50px] object-cover !m-0"
      decoding="auto"
      loading="lazy"
      height={"100"}
      width={"100"}
      
    />
    <div class="flex flex-col">
      <span class="font-bold prose-h6">{metaData.author}</span>
      <span class="prose-h6"
        >Published on: <span class="font-bold prose-h6"
          >{new Date(metaData.date).toLocaleDateString()}</span
        ></span
      >
    </div>
  </div>
  <slot />
</>

<style is:global>

  .blog-image {
    max-height: 400px;
    width: 100%;
    object-fit: cover;
  }

  figcaption {
    text-align: center;
  }
</style>
