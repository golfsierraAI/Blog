---
const { cardImageUrl } = Astro.props;
---

<div class="header_post">
  <img src={cardImageUrl} alt="" />
</div>

<style>
  .header_post {
    width: 100%;
    height: 40%;
    position: relative;
    top: 0;

    img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
