---
import { Picture } from "astro:assets";

const { cardImageUrl } = Astro.props;
---

<div class="header_post">
  <Picture
    src={cardImageUrl}
    formats={["avif", "webp"]}
    class="header_image"
    decoding="async"
    loading="lazy"
    height={"400"}
    width={"800"}
    alt="Header image for this card"
  />
</div>

<style>
  .header_post {
    width: 100%;
    height: 40%;
    position: relative;
    top: 0;

    .header_image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
</style>
