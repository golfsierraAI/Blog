---
import { slugify } from "../utils/utils";
import CardFooter from "./CardFooter.astro";

const { heading, bodyText, author, tags } = Astro.props;
---

<div
  class="w-full h-[65%] bg-white absolute bottom-0 flex items-center justify-center cursor-pointer"
>
  <a class="no-underline text-black" href=`/post/${slugify(heading)}/`>
    <div class="post_content w-[90%] h-[90%] bg-white relative">
      <h1 class="text-xl font-bold mb-2">{heading}</h1>
      <p class="text-sm font-normal">{bodyText}</p>
      <CardFooter author={author} tags={tags} />
    </div>
  </a>
</div>
