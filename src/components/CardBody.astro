---
import { slugify } from "../utils/utils";
import CardFooter from "./CardFooter.astro";

const { heading, bodyText, author, tags } = Astro.props;
---

<div class="body_post">
  <a href=`/post/${slugify(heading)}/`>
    <div class="post_content">
      <h1>{heading}</h1>
      <p>{bodyText}</p>
      <CardFooter author={author} tags={tags} />
    </div>
  </a>
</div>

<style>
  .body_post {
    width: 100%;
    height: 60%;
    background: #fff;
    position: absolute;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    -webkit-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
    -moz-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
    -ms-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
    -o-transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
    transition: cubic-bezier(0.68, -0.55, 0.27, 01.55) 320ms;
    cursor: pointer;

    a {
      text-decoration: none;
      color: unset;
    }

    .post_content {
      width: 90%;
      height: 90%;
      background: #fff;
      position: relative;

      h1 {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 0.5rem;
      }

      p {
        font-size: 14px;
        font-weight: normal;
      }
    }
  }
</style>
