---
import { slugify } from "../utils/utils";
import CardFooter from "./CardFooter.astro";

const { heading, bodyText, author, tags } = Astro.props;
---

<div
  class="w-full h-[65%] bg-white dark:bg-gray-950 absolute bottom-0 flex items-center justify-center cursor-pointer transition-colors duration-700"
>
  <a class="no-underline text-black" href=`/post/${slugify(heading)}/`>
    <div class="post_content w-[90%] h-[90%] bg-white dark:bg-gray-950 relative transition-colors duration-700">
      <h1 class="text-xl font-bold mb-2 dark:text-white text-black transition-colors duration-700">{heading}</h1>
      <p class="text-sm font-normal dark:text-white text-black transition-colors duration-700">{bodyText}</p>
      <CardFooter author={author} tags={tags} />
    </div>
  </a>
</div>
