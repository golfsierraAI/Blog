---
const { postsMetaData, showMore } = Astro.props;
import BlogCard from "./BlogCard.astro";
---

<div class="p-3 lg:p-10 dark:bg-black bg-neutral-100 dark:text-white">
  <h1
    class:list={[
      "text-2xl lg:text-3xl font-bold mb-5",
      {
        hidden: !showMore,
      },
    ]}
  >
    Latest posts
  </h1>
  <div class="lg:grid grid-cols-3 grid-rows-1 lg:gap-8 dark:text-white">
    {
      postsMetaData.map((card) => {
        return (
          <BlogCard
            cardImageUrl={card.imageUrl}
            heading={card.title}
            bodyText={card.description}
            author={card.author}
            tags={card.tags}
            publishedDate={card.date}
          />
        );
      })
    }
    <div
      class:list={[
        "h-full w-full flex justify-center items-center",
        {
          hidden: !showMore,
        },
      ]}
    >
      <a class="font-semibold mt-5" href="/posts">See more</a>
    </div>
  </div>
</div>
